# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.patch]
trim_trailing_whitespace = false

[*.bat]
indent_style = tab
end_of_line = crlf

# SageMaker's .manifest are .json or .jsonl
[*.{yaml,yml,json,manifest}]
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
